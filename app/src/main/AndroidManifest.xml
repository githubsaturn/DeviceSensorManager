<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigdeli.kasra.devicesensormanager">

    <uses-sdk android:minSdkVersion="14" />
    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddSensorActivity"
            android:label="@string/add_sensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar"></activity>

        <provider
            android:name=".MyProvider"
            android:authorities="com.bigdeli.kasra.devicesensormanager"
            android:exported="true" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
